---
import HeartFilled from "../icons/HeartFilled.astro";
import Instagram from "../icons/Instagram.astro";
import PlayerPlay from "../icons/PlayerPlay.astro";
import TikTok from "../icons/TikTok.astro";
import TrendingUp from "../icons/TrendingUp.astro";
import Users from "../icons/Users.astro";

import { getInstagramData } from "../services/instagram";
import { getTikTokData } from "../services/tiktok";

const instagramData = await getInstagramData();
const tiktokData = await getTikTokData();
---

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
  {/* Header */}
  <div class="text-center max-w-3xl mx-auto mb-16">
    <h2 class="text-sm font-bold text-accent uppercase tracking-wider mb-3">
      Seguinos en Redes
    </h2>
    <h3 class="text-4xl md:text-5xl font-bold text-primary mb-6">
      Unite a nuestra comunidad
    </h3>
    <p class="text-lg text-gray-600">
      Más de 10.000 personas nos siguen y confían en nosotros
    </p>
  </div>

  <div class="grid lg:grid-cols-2 gap-8">
    {/* Instagram Widget */}
    {
      instagramData && (
        <div class="bg-white rounded-3xl shadow-xl p-8 hover:shadow-2xl transition-shadow duration-300 card">
          {/* Header */}
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-4">
              <div class="w-16 h-16 rounded-full bg-gradient-to-tr from-purple-600 via-pink-600 to-orange-500 p-0.5 shrink-0">
                <div class="w-full h-full rounded-full bg-white p-0.5">
                  <img
                    src={instagramData.profilePicture}
                    alt="Instagram profile"
                    width="64"
                    height="64"
                    loading="lazy"
                    class="w-full h-full rounded-full object-cover"
                  />
                </div>
              </div>
              <div>
                <h4 class="text-xl font-bold text-primary">
                  {instagramData.name}
                </h4>
                <p class="text-sm text-gray-500">@{instagramData.username}</p>
              </div>
            </div>
            <span class="text-4xl">
              <Instagram class="size-10 ig-colors" />
            </span>
          </div>

          {/* Stats */}
          <div class="grid grid-cols-3 gap-4 mb-6 py-6 border-y border-gray-100">
            <div class="text-center">
              <div class="text-2xl font-bold text-primary">
                {instagramData.posts.toLocaleString()}
              </div>
              <div class="text-sm text-gray-500">Posts</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-accent">
                {instagramData.followers.toLocaleString()}
              </div>
              <div class="text-sm text-gray-500">Seguidores</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-primary">
                {instagramData.following.toLocaleString()}
              </div>
              <div class="text-sm text-gray-500">Siguiendo</div>
            </div>
          </div>

          {/* Bio */}
          <p class="text-gray-600 mb-6 text-center italic text-sm whitespace-pre-wrap">
            "{instagramData.bio}"
          </p>

          {/* Recent posts grid */}
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-2 mb-6">
            {instagramData.recentPosts.map((post) => (
              <a
                href={post.permalink}
                target="_blank"
                rel="noopener noreferrer"
                class="relative aspect-square rounded-lg overflow-hidden group cursor-pointer block"
              >
                <img
                  src={post.image}
                  alt={post.caption || "Instagram post"}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                />
                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/40 transition-colors duration-300 flex items-center justify-center">
                  <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 text-white text-xs flex items-center space-x-2">
                    <span>
                      <HeartFilled />
                    </span>
                    <span>{post.likes}</span>
                  </div>
                </div>
              </a>
            ))}
          </div>

          {/* Follow button */}
          <a
            href="https://www.instagram.com/abogadosart_/"
            target="_blank"
            rel="noopener noreferrer"
            class="block w-full text-center bg-gradient-to-r from-purple-600 via-pink-600 to-orange-500 hover:from-purple-700 hover:via-pink-700 hover:to-orange-600 text-white font-bold py-3 rounded-lg transition-all duration-300 transform hover:scale-105"
          >
            Seguir en Instagram
          </a>
        </div>
      )
    }

    {
      tiktokData && (
        <div class="bg-white rounded-3xl shadow-xl p-8 hover:shadow-2xl transition-shadow duration-300 card">
          {/* Header */}
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-4">
              <div class="w-16 h-16 rounded-full bg-black p-0.5 shrink-0">
                <div class="w-full h-full rounded-full bg-white p-0.5">
                  <img
                    src={tiktokData.profilePicture}
                    alt="TikTok profile"
                    width="64"
                    height="64"
                    loading="lazy"
                    class="w-full h-full rounded-full object-cover"
                  />
                </div>
              </div>
              <div>
                <h4 class="text-xl font-bold text-primary">
                  {tiktokData.username}
                </h4>
                <p class="text-sm text-gray-500">@abogadosart_</p>
              </div>
            </div>
            <span class="text-4xl text-black">
              <TikTok class="size-9" />
            </span>
          </div>

          {/* Stats */}
          <div class="grid grid-cols-3 gap-4 mb-6 py-6 border-y border-gray-100">
            <div class="text-center">
              <div class="text-2xl font-bold text-primary">
                {tiktokData.videos.toLocaleString()}
              </div>
              <div class="text-sm text-gray-500">Videos</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-accent">
                {tiktokData.followers.toLocaleString()}
              </div>
              <div class="text-sm text-gray-500">Seguidores</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-primary">
                {tiktokData.likes.toLocaleString()}
              </div>
              <div class="text-sm text-gray-500">Me Gusta</div>
            </div>
          </div>

          {/* Bio */}
          <p class="text-gray-600 mb-6 text-center italic text-sm whitespace-pre-wrap">
            "{tiktokData.bio}"
          </p>

          {/* Recent posts grid */}
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-2 mb-6">
            {tiktokData.recentPosts.map((post) => (
              <a
                href={post.permalink}
                target="_blank"
                rel="noopener noreferrer"
                class="relative aspect-square rounded-lg overflow-hidden group cursor-pointer block"
              >
                <img
                  src={post.image}
                  alt={post.title || "TikTok video"}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                />
                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/40 transition-colors duration-300 flex items-center justify-center">
                  <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 text-white text-xs flex flex-col items-center space-y-1">
                    <span class="flex items-center space-x-1">
                      <HeartFilled />
                      <span>{post.likes}</span>
                    </span>
                    <span class="flex items-center space-x-1">
                      <PlayerPlay />
                      <span>{post.views}</span>
                    </span>
                  </div>
                </div>
              </a>
            ))}
          </div>

          {/* Follow button */}
          <a
            href="https://www.tiktok.com/@abogadosart_"
            target="_blank"
            rel="noopener noreferrer"
            class="block w-full text-center bg-black hover:bg-gray-800 text-white font-bold py-3 rounded-lg transition-all duration-300 transform hover:scale-105"
          >
            Seguir en TikTok
          </a>
        </div>
      )
    }
  </div>
</div>
