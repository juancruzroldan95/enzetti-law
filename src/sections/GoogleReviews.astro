---
import StarFilled from "../icons/StarFilled.astro";
import WhatsApp from "../icons/WhatsApp.astro";
import { getGoogleReviews } from "../services/google";

const googleReviews = await getGoogleReviews();
---

{
  googleReviews && (
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
      {/* Header */}
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-sm font-bold text-accent uppercase tracking-wider mb-3">
          Reseñas de Clientes
        </h2>
        <h3 class="text-4xl md:text-5xl font-bold text-primary mb-6">
          Lo que dicen nuestros clientes
        </h3>

        {/* Google rating badge */}
        <div class="inline-flex items-center space-x-4 bg-white border-2 border-gray-200 rounded-full px-6 py-3 shadow-lg">
          <img
            src="https://upload.wikimedia.org/wikipedia/commons/2/2f/Google_2015_logo.svg"
            alt="Google"
            class="h-6"
          />
          <div class="flex items-center space-x-2">
            <span class="text-3xl font-bold text-primary">
              {googleReviews.rating}
            </span>
            <div class="flex text-yellow-400">
              {Array.from({ length: 5 }).map(() => (
                <span>
                  <StarFilled />
                </span>
              ))}
            </div>
          </div>
          <div class="text-sm text-gray-600 border-l pl-4 text-left">
            <div class="font-bold text-primary">
              {googleReviews.total_reviews}
            </div>
            <div>reseñas</div>
          </div>
        </div>
      </div>

      {/* Reviews Grid */}
      <div class="flex flex-wrap justify-center gap-8">
        {googleReviews.reviews.map((review) => (
          <a
            href={review.author_url}
            target="_blank"
            rel="noopener noreferrer"
            class="w-full md:w-[calc(50%-1rem)] lg:w-[calc(33.333%-1.34rem)] bg-white border-2 border-gray-100 rounded-2xl p-6 hover:border-accent/30 hover:shadow-xl transition-all duration-300 group flex flex-col review-card block relative"
            title="Ver reseña en Google Maps"
          >
            {/* External Link Icon (Subtle) */}
            <div class="absolute top-4 right-4 text-gray-300 group-hover:text-accent transition-colors">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                <polyline points="15 3 21 3 21 9" />
                <line x1="10" y1="14" x2="21" y2="3" />
              </svg>
            </div>

            {/* Stars */}
            <div class="flex mb-4 text-yellow-400">
              {Array.from({ length: review.rating }).map(() => (
                <span>
                  <StarFilled />
                </span>
              ))}
            </div>

            {/* Review text */}
            <p class="text-gray-700 leading-relaxed mb-6 flex-grow">
              "{review.text}"
            </p>

            {/* Author info */}
            <div class="flex items-center space-x-3 pt-4 border-t border-gray-100">
              <img
                src={review.avatar}
                alt={review.author}
                class="w-12 h-12 rounded-full object-cover"
              />
              <div class="text-left">
                <div class="font-bold text-primary group-hover:text-accent transition-colors">
                  {review.author}
                </div>
                <div class="text-sm text-gray-500">{review.date}</div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  )
}
