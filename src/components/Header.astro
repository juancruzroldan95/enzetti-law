---
const navItems = [
  { name: "Inicio", href: "/" },
  { name: "Nosotros", href: "/nosotros" },
  { name: "Servicios", href: "/servicios" },
  { name: "Preguntas Frecuentes", href: "/preguntas-frecuentes" },
  { name: "Contacto", href: "/contacto" },
];
---

<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="text-2xl font-serif font-bold text-primary">
      Estudio Enzetti
    </a>

    <nav class="hidden md:flex space-x-8">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="text-primary-light hover:text-accent transition-colors font-medium"
          >
            {item.name}
          </a>
        ))
      }
    </nav>

    <a
      href="/contacto"
      class="hidden md:inline-block bg-accent hover:bg-accent-hover text-white px-6 py-2 rounded-md font-medium transition-colors"
    >
      Consulta Gratuita
    </a>

    <!-- Mobile Menu Button (Placeholder for interactivity) -->
    <button class="md:hidden text-primary" aria-label="Menu">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>
</header>
