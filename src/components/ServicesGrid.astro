---
const services = [
  {
    title: "Accidentes Laborales",
    description:
      "Reclamos por accidentes ocurridos en el lugar de trabajo o in itinere.",
    icon: "M13 10V3L4 14h7v7l9-11h-7z", // Lightning bolt
    href: "/servicios/accidentes-laborales",
  },
  {
    title: "Enfermedades Profesionales",
    description:
      "Indemnizaciones por patologías derivadas de la actividad laboral.",
    icon: "M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z", // Flask/Medical
    href: "/servicios/enfermedades-profesionales",
  },
  {
    title: "Rechazos de ART",
    description:
      "Acciones legales ante el rechazo injustificado de la aseguradora.",
    icon: "M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z", // Warning
    href: "/servicios/rechazos-art",
  },
  {
    title: "Alta Médica Prematura",
    description: "Reclamos cuando la ART otorga el alta sin estar recuperado.",
    icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z", // Check circle
    href: "/servicios/alta-prematura",
  },
  {
    title: "Recalificación Laboral",
    description: "Derecho a tareas acordes a su capacidad tras un accidente.",
    icon: "M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15", // Refresh/Cycle
    href: "/servicios/recalificacion",
  },
  {
    title: "Indemnizaciones Civiles",
    description: "Reclamos integrales por daños y perjuicios.",
    icon: "M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3", // Scale
    href: "/servicios/demandas-civiles",
  },
];
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-serif font-bold text-primary mb-4">
        Nuestras Áreas de Práctica
      </h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Nos especializamos exclusivamente en derecho laboral y accidentes de
        trabajo para brindarle la mejor defensa.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        services.map((service) => (
          <a
            href={service.href}
            class="group bg-white p-8 rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-accent/20 relative overflow-hidden"
          >
            <div class="absolute top-0 left-0 w-1 h-full bg-accent opacity-0 group-hover:opacity-100 transition-opacity" />

            <div class="w-12 h-12 bg-primary/5 text-primary group-hover:bg-accent group-hover:text-white rounded-lg flex items-center justify-center mb-6 transition-colors duration-300">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d={service.icon}
                />
              </svg>
            </div>

            <h3 class="text-xl font-bold text-primary mb-3 group-hover:text-accent transition-colors">
              {service.title}
            </h3>
            <p class="text-gray-600 mb-4">{service.description}</p>

            <span class="text-accent font-medium text-sm flex items-center gap-1 group-hover:gap-2 transition-all">
              Más información
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"
                />
              </svg>
            </span>
          </a>
        ))
      }
    </div>
  </div>
</section>
