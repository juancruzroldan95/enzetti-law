---
import { Image } from "astro:assets";
import logo from "../assets/logo.webp";
import Phone from "../icons/Phone.astro";
import WhatsApp from "../icons/WhatsApp.astro";
import Mail from "../icons/Mail.astro";
import MapPin from "../icons/MapPin.astro";
import Instagram from "../icons/Instagram.astro";
import TikTok from "../icons/TikTok.astro";

const currentYear = new Date().getFullYear();
---

<footer id="contacto" class="bg-white text-zinc-900 border-t border-zinc-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8">
      {/* Brand Column */}
      <div class="space-y-6">
        <Image
          src={logo}
          alt="Estudio Enzetti"
          class="h-12 w-auto"
          quality="max"
        />
        <p class="text-zinc-600 text-sm leading-relaxed max-w-xs">
          Excelencia jurídica con más de 30 años de trayectoria defendiendo los
          derechos de los trabajadores en todo el país.
        </p>
      </div>

      {/* Contact Section */}
      <div class="space-y-6">
        <h4 class="text-zinc-900 font-bold text-lg flex items-center gap-2">
          Contacto
          <span class="w-1.5 h-1.5 rounded-full bg-accent"></span>
        </h4>
        <div class="space-y-4">
          <a
            href="tel:+541143711602"
            class="group flex items-center gap-4 text-zinc-600 hover:text-zinc-900 transition-colors duration-300"
          >
            <div
              class="w-10 h-10 rounded-lg bg-zinc-100 flex items-center justify-center group-hover:bg-accent/10 group-hover:text-accent transition-all"
            >
              <Phone class="w-5 h-5" />
            </div>
            <div class="text-sm">
              <p>(011) 4371-1602</p>
            </div>
          </a>
          <a
            href="https://wa.me/5491143711602"
            target="_blank"
            class="group flex items-center gap-4 text-zinc-600 hover:text-zinc-900 transition-colors duration-300"
          >
            <div
              class="w-10 h-10 rounded-lg bg-zinc-100 flex items-center justify-center group-hover:bg-green-500/10 group-hover:text-green-500 transition-all"
            >
              <WhatsApp class="w-5 h-5" />
            </div>
            <div class="text-sm">
              <p>+54 9 11 4371-1602</p>
            </div>
          </a>
          <a
            href="mailto:ple@estudioenzetti.com.ar"
            class="group flex items-center gap-4 text-zinc-600 hover:text-zinc-900 transition-colors duration-300"
          >
            <div
              class="w-10 h-10 rounded-lg bg-zinc-100 flex items-center justify-center group-hover:bg-accent/10 group-hover:text-accent transition-all"
            >
              <Mail class="w-5 h-5" />
            </div>
            <div class="text-sm">ple@estudioenzetti.com.ar</div>
          </a>
        </div>
      </div>

      {/* Location Section */}
      <div class="space-y-6">
        <h4 class="text-zinc-900 font-bold text-lg flex items-center gap-2">
          Ubicación
          <span class="w-1.5 h-1.5 rounded-full bg-accent"></span>
        </h4>
        <div class="space-y-4">
          <div class="flex items-start gap-4">
            <div
              class="w-10 h-10 rounded-lg bg-zinc-100 flex items-center justify-center text-accent"
            >
              <MapPin class="w-5 h-5" />
            </div>
            <div class="text-sm text-zinc-600 leading-relaxed">
              <p class="text-zinc-900 font-medium">CABA, Buenos Aires</p>
              <p>Lavalle 1710 - Piso 2 Of. 3</p>
              <p class="text-zinc-500 text-xs mt-1">
                Lunes a Viernes: 09:00 - 18:00 hs
              </p>
            </div>
          </div>
          <div
            class="w-full h-32 rounded-lg overflow-hidden border border-zinc-200 relative group mt-2"
          >
            <iframe
              width="100%"
              height="100%"
              src="https://maps.google.com/maps?q=Lavalle%201710%2C%20CABA%2C%20Buenos%20Aires&t=&z=15&ie=UTF8&iwloc=&output=embed"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"></iframe>
            <a
              href="https://maps.app.goo.gl/smhz7Kh8ek3pAky67"
              target="_blank"
              class="absolute inset-0 bg-transparent"
              aria-label="Ver ubicación en Google Maps"></a>
          </div>
          <a
            href="https://maps.app.goo.gl/smhz7Kh8ek3pAky67"
            target="_blank"
            class="inline-block text-accent hover:text-accent-light text-sm font-semibold transition-colors pt-2"
          >
            Cómo llegar →
          </a>
        </div>
      </div>

      {/* Social Media Section */}
      <div class="space-y-6">
        <h4 class="text-zinc-900 font-bold text-lg flex items-center gap-2">
          Redes Sociales
          <span class="w-1.5 h-1.5 rounded-full bg-accent"></span>
        </h4>
        <div class="flex flex-col gap-3">
          <a
            href="https://www.instagram.com/abogadosart_/"
            target="_blank"
            class="group flex items-center gap-3 text-zinc-600 hover:text-zinc-900 transition-all duration-300"
          >
            <div
              class="w-10 h-10 rounded-lg bg-zinc-100 border border-zinc-200 flex items-center justify-center group-hover:bg-gradient-to-tr group-hover:from-purple-600 group-hover:to-orange-500 group-hover:border-transparent transition-all"
            >
              <Instagram class="w-5 h-5 text-zinc-600 group-hover:text-white" />
            </div>
            <span class="text-sm font-medium">Instagram</span>
          </a>
          <a
            href="https://www.tiktok.com/@abogadosart_"
            target="_blank"
            class="group flex items-center gap-3 text-zinc-600 hover:text-zinc-900 transition-all duration-300"
          >
            <div
              class="w-10 h-10 rounded-lg bg-zinc-100 border border-zinc-200 flex items-center justify-center group-hover:bg-black group-hover:text-white group-hover:border-transparent transition-all"
            >
              <TikTok class="w-5 h-5" />
            </div>
            <span class="text-sm font-medium">TikTok</span>
          </a>
        </div>
      </div>
    </div>

    {/* Bottom Bar */}
    <div
      class="mt-20 pt-8 border-t border-zinc-200 flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <div class="flex flex-col md:flex-row gap-4 items-center">
        <p class="text-zinc-500 text-xs text-center md:text-left">
          © {currentYear} Estudio Jurídico Enzetti
        </p>
        <div class="hidden md:block w-1 h-1 rounded-full bg-zinc-300"></div>
        <div class="flex gap-4 text-xs text-zinc-500">
          <a
            href="/terminos-y-condiciones"
            class="hover:text-zinc-900 transition-colors"
            >Términos y Condiciones</a
          >
          <a
            href="/politica-de-privacidad"
            class="hover:text-zinc-900 transition-colors"
            >Política de Privacidad</a
          >
        </div>
      </div>

      <p class="text-zinc-500 text-xs text-center">
        Hecho por
        <a
          href="https://jcroldan.dev"
          target="_blank"
          class="hover:text-accent transition-colors font-medium"
        >
          jcroldan.dev</a
        >
      </p>
    </div>
  </div>
</footer>
