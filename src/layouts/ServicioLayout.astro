---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <div class="bg-primary text-white py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-serif font-bold mb-4">{title}</h1>
      <div class="h-1 w-20 bg-accent"></div>
    </div>
  </div>

  <div class="container mx-auto px-4 py-12 flex flex-col md:flex-row gap-12">
    <article class="md:w-2/3 prose prose-lg prose-slate max-w-none">
      <slot />
    </article>

    <aside class="md:w-1/3 space-y-8">
      <div class="bg-white p-6 rounded-lg shadow-md border-t-4 border-accent">
        <h3 class="text-xl font-bold mb-4">¿Necesita Asesoramiento?</h3>
        <p class="text-gray-600 mb-6">
          Nuestros especialistas están listos para analizar su caso sin cargo.
        </p>
        <a
          href="/contacto"
          class="block w-full bg-primary hover:bg-primary-light text-white text-center py-3 rounded font-medium transition-colors"
        >
          Solicitar Consulta
        </a>
      </div>

      <div class="bg-gray-50 p-6 rounded-lg shadow-sm">
        <h3 class="text-xl font-bold mb-4">Otros Servicios</h3>
        <ul class="space-y-3">
          <li>
            <a
              href="/servicios/accidentes-laborales"
              class="text-primary hover:text-accent transition-colors block border-b border-gray-200 pb-2"
              >Accidentes Laborales</a>
          </li>
          <li>
            <a
              href="/servicios/enfermedades-profesionales"
              class="text-primary hover:text-accent transition-colors block border-b border-gray-200 pb-2"
              >Enfermedades Profesionales</a>
          </li>
          <li>
            <a
              href="/servicios/reaperturas"
              class="text-primary hover:text-accent transition-colors block border-b border-gray-200 pb-2"
              >Reaperturas de Casos</a>
          </li>
          <li>
            <a
              href="/servicios/rechazos-art"
              class="text-primary hover:text-accent transition-colors block border-b border-gray-200 pb-2"
              >Rechazos de ART</a>
          </li>
        </ul>
      </div>
    </aside>
  </div>
</BaseLayout>
