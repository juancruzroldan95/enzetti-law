---
import "../styles/global.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import MobileMenu from "../components/MobileMenu.astro";
import WhatsAppWidget from "../components/WhatsAppWidget.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Estudio Jurídico Enzetti. Asesoramiento legal integral, derecho civil, comercial y laboral. Abogados especialistas en Córdoba.",
  image = "/og-image.jpg",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.url);

const schema = {
  "@context": "https://schema.org",
  "@type": "LegalService",
  name: "Estudio Enzetti",
  image: socialImageURL,
  url: Astro.site,
  telephone: "+5491143711602",
  address: {
    "@type": "PostalAddress",
    streetAddress: "Lavalle 1710",
    addressLocality: "CABA",
    addressRegion: "Buenos Aires",
    postalCode: "1048",
    addressCountry: "AR",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: -34.603112883891704,
    longitude: -58.39100636441745,
  },
  description: description,
};
---

<!doctype html>
<html lang="es-AR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <title>{title} | Estudio Enzetti</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={`${title} | Estudio Enzetti`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={`${title} | Estudio Enzetti`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />

    <!-- Schema.org JSON-LD -->
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify(schema)}
    />
  </head>
  <body
    class="antialiased text-primary selection:bg-accent selection:text-white"
  >
    <Header />
    <div class="overflow-x-hidden w-full relative">
      <slot />
      <Footer />
    </div>
    <MobileMenu />
    <WhatsAppWidget />
  </body>
</html>
