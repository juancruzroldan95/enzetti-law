---
import "../styles/global.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import MobileMenu from "../components/MobileMenu.astro";
import WhatsAppWidget from "../components/WhatsAppWidget.astro";
import CookieBanner from "../components/CookieBanner.astro";
import Analytics from "@vercel/analytics/astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
  noindex?: boolean;
}

const {
  title,
  description = "Estudio Jur√≠dico Enzetti. Asesoramiento legal integral en accidentes de trabajo, enfermedades profesionales y reclamos a ART en Buenos Aires.",
  image = "/og-image.webp",
  noindex = false,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.site);

const schema = {
  "@context": "https://schema.org",
  "@type": "LegalService",
  name: "Estudio Enzetti",
  image: socialImageURL.href,
  logo: socialImageURL.href,
  url: Astro.site?.toString(),
  telephone: "+5491143711602",
  address: {
    "@type": "PostalAddress",
    streetAddress: "Lavalle 1710",
    addressLocality: "CABA",
    addressRegion: "Buenos Aires",
    postalCode: "1048",
    addressCountry: "AR",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: -34.603112883891704,
    longitude: -58.39100636441745,
  },
  description: description,
  priceRange: "$$",
  openingHoursSpecification: {
    "@type": "OpeningHoursSpecification",
    dayOfWeek: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
    opens: "09:00",
    closes: "18:00",
  },
  areaServed: {
    "@type": "City",
    name: "Buenos Aires",
  },
  sameAs: [],
};
---

<!doctype html>
<html lang="es-AR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <title>{title}</title>
    <meta name="description" content={description} />
    {noindex ? (
      <meta name="robots" content="noindex, nofollow" />
    ) : (
      <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    )}
    <meta name="theme-color" content="#1a1a2e" />

    <!-- Open Graph / Facebook / WhatsApp -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:image:type" content="image/webp" />
    <meta property="og:image:alt" content="Estudio Enzetti - Abogados Laborales y ART" />
    <meta property="og:site_name" content="Estudio Enzetti" />
    <meta property="og:locale" content="es_AR" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageURL} />
    <meta name="twitter:image:alt" content="Estudio Enzetti - Abogados Laborales y ART" />

    <!-- Schema.org JSON-LD -->
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify(schema)}
    />
    <Analytics />
  </head>
  <body
    class="antialiased text-primary selection:bg-accent selection:text-white"
  >
    <Header />
    <div class="overflow-x-hidden w-full relative">
      <slot />
      <Footer />
    </div>
    <MobileMenu />
    <WhatsAppWidget />
    <!-- <CookieBanner /> -->
  </body>
</html>
