---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Hero from "../sections/Hero.astro";
import Services from "../sections/Services.astro";
import TeamVideos from "../sections/TeamVideos.astro";
import ProcessSection from "../sections/ProcessSection.astro";
import SocialMedia from "../sections/SocialMedia.astro";
import GoogleReviews from "../sections/GoogleReviews.astro";
import QuoteSection from "../sections/QuoteSection.astro";
import FinalCTA from "../sections/FinalCTA.astro";

const title = "Estudio Enzetti | Abogados Laborales y ART";
const description =
  "Estudio Jur√≠dico especializado en Accidentes de Trabajo, Enfermedades Profesionales y Reclamos a ART en Buenos Aires. Consulta Gratuita.";
---

<Layout title={title} description={description}>
  <main>
    <SectionContainer
      id="inicio"
      class="relative overflow-hidden"
      enableAnimation={false}
    >
      <Hero />
    </SectionContainer>

    <SectionContainer id="quote" class="bg-primary" enableAnimation={false}>
      <QuoteSection />
    </SectionContainer>

    <SectionContainer
      id="servicios"
      class="bg-gradient-to-b from-white to-gray-50"
    >
      <Services />
    </SectionContainer>

    <SectionContainer id="equipo" class="bg-white">
      <TeamVideos />
    </SectionContainer>

    <SectionContainer id="redes" class="bg-gradient-to-b from-gray-50 to-white">
      <SocialMedia />
    </SectionContainer>

    <SectionContainer
      id="proceso"
      class="bg-gradient-to-b from-gray-50 to-white"
    >
      <ProcessSection />
    </SectionContainer>

    <SectionContainer id="resenas" class="bg-white">
      <GoogleReviews />
    </SectionContainer>

    <SectionContainer id="final-cta" class="bg-white">
      <FinalCTA />
    </SectionContainer>
  </main>
</Layout>
