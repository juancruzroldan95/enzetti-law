---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Hero from "../sections/Hero.astro";
import AboutUs from "../sections/AboutUs.astro";
import Services from "../sections/Services.astro";
import TeamVideos from "../sections/TeamVideos.astro";
import ProcessSection from "../sections/ProcessSection.astro";
import SocialMedia from "../sections/SocialMedia.astro";
import GoogleReviews from "../sections/GoogleReviews.astro";

const title = "Estudio Enzetti | Abogados Laborales y ART";
const description =
  "Estudio Jur√≠dico especializado en Accidentes de Trabajo, Enfermedades Profesionales y Reclamos a ART en Buenos Aires. Consulta Gratuita.";
---

<Layout title={title} description={description}>
  <main>
    <SectionContainer
      id="inicio"
      class="relative min-h-screen flex items-center overflow-hidden"
    >
      <Hero />
    </SectionContainer>

    <SectionContainer id="nosotros" class="bg-white">
      <AboutUs />
    </SectionContainer>

    <SectionContainer
      id="servicios"
      class="bg-gradient-to-b from-white to-gray-50"
    >
      <Services />
    </SectionContainer>

    <SectionContainer id="equipo" class="bg-white">
      <TeamVideos />
    </SectionContainer>

    <SectionContainer
      id="proceso"
      class="bg-gradient-to-b from-gray-50 to-white"
    >
      <ProcessSection />
    </SectionContainer>

    <SectionContainer
      id="comunidad"
      class="bg-gradient-to-b from-gray-50 to-white"
    >
      <SocialMedia />
    </SectionContainer>

    <SectionContainer id="resenas" class="bg-white">
      <GoogleReviews />
    </SectionContainer>
  </main>
</Layout>
