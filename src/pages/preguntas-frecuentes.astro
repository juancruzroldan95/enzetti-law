---
import BaseLayout from "../layouts/BaseLayout.astro";
import FAQList from "../components/FAQList.astro";
import ContactForm from "../components/ContactForm.astro";

const title = "Preguntas Frecuentes | Estudio Enzetti";
const description =
  "Respuestas a las dudas más comunes sobre accidentes laborales, ART y derechos del trabajador.";
---

<BaseLayout title={title} description={description}>
  <section class="bg-primary text-white py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-serif font-bold mb-4">
        Preguntas Frecuentes
      </h1>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Despeje sus dudas sobre el proceso de reclamo ante la ART.
      </p>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <FAQList />
    </div>
  </section>

  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-serif font-bold text-primary mb-8">
        ¿Tiene otra consulta?
      </h2>
      <div class="max-w-2xl mx-auto">
        <ContactForm />
      </div>
    </div>
  </section>
</BaseLayout>
