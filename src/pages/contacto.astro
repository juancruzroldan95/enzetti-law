---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactForm from "../components/ContactForm.astro";
import GoogleMapsEmbed from "../components/GoogleMapsEmbed.astro";

const title = "Contacto | Estudio Enzetti";
const description =
  "Comuníquese con Estudio Enzetti. Asesoramiento gratuito en accidentes laborales y ART. Atención en CABA y GBA.";
---

<BaseLayout title={title} description={description}>
  <section class="bg-primary text-white py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-serif font-bold mb-4">Contacto</h1>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Estamos para ayudarle. Su consulta es gratuita y confidencial.
      </p>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div>
          <h2 class="text-3xl font-serif font-bold text-primary mb-8">
            Información de Contacto
          </h2>

          <div class="space-y-8">
            <div class="flex items-start gap-4">
              <div
                class="w-12 h-12 bg-accent/10 rounded-full flex items-center justify-center text-accent flex-shrink-0"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-primary mb-1">
                  Oficina Central
                </h3>
                <p class="text-gray-600">Av. Corrientes 1234, Piso 5</p>
                <p class="text-gray-600">
                  Ciudad Autónoma de Buenos Aires (C1043)
                </p>
                <p class="text-sm text-gray-500 mt-1">
                  Atención con turno previo
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div
                class="w-12 h-12 bg-accent/10 rounded-full flex items-center justify-center text-accent flex-shrink-0"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-primary mb-1">Teléfonos</h3>
                <p class="text-gray-600">
                  Línea Directa: <a
                    href="tel:+541112345678"
                    class="text-accent hover:underline">+54 11 1234-5678</a>
                </p>
                <p class="text-gray-600">
                  WhatsApp: <a
                    href="https://wa.me/5491112345678"
                    class="text-accent hover:underline">+54 9 11 1234-5678</a>
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div
                class="w-12 h-12 bg-accent/10 rounded-full flex items-center justify-center text-accent flex-shrink-0"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-primary mb-1">Email</h3>
                <p class="text-gray-600">
                  <a
                    href="mailto:contacto@estudioenzetti.com.ar"
                    class="text-accent hover:underline"
                    >contacto@estudioenzetti.com.ar</a>
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div
                class="w-12 h-12 bg-accent/10 rounded-full flex items-center justify-center text-accent flex-shrink-0"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-primary mb-1">
                  Horarios de Atención
                </h3>
                <p class="text-gray-600">Lunes a Viernes: 9:00 a 18:00 hs</p>
              </div>
            </div>
          </div>
        </div>

        <div>
          <div
            class="bg-gray-50 p-8 rounded-xl shadow-sm border border-gray-100"
          >
            <ContactForm />
          </div>
        </div>
      </div>

      <div class="mt-12">
        <GoogleMapsEmbed />
      </div>
    </div>
  </section>
</BaseLayout>
